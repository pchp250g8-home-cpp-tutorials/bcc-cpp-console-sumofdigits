#include <iostream>
#include <tchar.h>
#include <math.h>
#include <stdlib.h>

int _tmain(int argc, _TCHAR* argv[])
{
	int iNum, iVal, iNumDigits;
    system("cls");
    std::cout << "Input an integer number\r\n";
    std::cin >> iNum;
    iVal = abs(iNum); iSumDigits = 0;
    while (iVal > 0)
    {
        iSumDigits += iVal % 10;
        iVal /= 10;
    }
    std::cout << "The sum of digits of the number " << iNum << " is "
              << iSumDigits << "\r\n";
    std::cin.ignore();
    std::cin.get();
}
